@{
    ViewData["Title"] = "Give Feedback";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start flex-wrap">
        <h2 class="me-3 mb-0" style="color: #e73216;">Give Feedback</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>

<form asp-action="SubmitFeedback" method="post">
    <div class="form-group">
        <label for="CustomerName">Customer Name<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Enter your name" required />
    </div>
    <div class="form-group">
        <label for="CompanyName">Company Name<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="CompanyName" name="CompanyName" placeholder="Enter your company name" required />
    </div>
    <div class="form-group">
        <label for="Position">Position<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="Position" name="Position" placeholder="Enter your position" required />
    </div>

    <div class="form-group">
        <label for="GiftSatisfaction">Gift Satisfaction (1-10)<span class="text-danger">*</span></label>
        <select class="form-control" id="GiftSatisfaction" name="GiftSatisfaction" required>
            <option value="">Select rating</option>
            @for (int i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="EaseofReceiving">Ease of Receiving (1-10)<span class="text-danger">*</span></label>
        <select class="form-control" id="EaseofReceiving" name="EaseofReceiving" required>
            <option value="">Select rating</option>
            @for (int i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="GiftImpact">Gift Impact (1-10)<span class="text-danger">*</span></label>
        <select class="form-control" id="GiftImpact" name="GiftImpact" required>
            <option value="">Select rating</option>
            @for (int i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Comments">Additional Comments</label>
        <textarea class="form-control" id="Comments" name="Comments" rows="4" placeholder="Share your thoughts"></textarea>
    </div>

    <div class="card-footer">
        <center>
            <button type="submit" class="btn btn-primary" style="background-color: #e73216; border-color: #e73216;">Submit</button>  
            <a asp-action="Index" asp-controller="Survey" class="btn btn-secondary">Cancel</a>
        </center>
    </div>
    
</form>
<div>
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
